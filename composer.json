{
    "name": "muffin/orderly",
    "description": "Default ordering (behavior) for CakePHP",
    "type": "cakephp-plugin",
    "keywords": [
        "cakephp",
        "muffin",
        "orderly"
    ],
    "homepage": "https://github.com/usemuffin/orderly",
    "license": "MIT",
    "authors": [
        {
            "name": "Jad Bitar",
            "homepage": "http://jadb.io",
            "role": "Author"
        },
        {
            "name": "ADmad",
            "homepage": "https://github.com/ADmad",
            "role": "Author"
        },
        {
            "name": "Others",
            "homepage": "https://github.com/usemuffin/orderly/graphs/contributors"
        }
    ],
    "support": {
        "issues": "https://github.com/usemuffin/orderly/issues",
        "source": "https://github.com/usemuffin/orderly"
    },
    "require": {
        "cakephp/orm": "^5.0"
    },
    "require-dev": {
        "cakephp/cakephp": "^5.0",
        "phpunit/phpunit": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "Muffin\\Orderly\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Muffin\\Orderly\\Test\\": "tests",
            "Cake\\Test\\Fixture\\": "vendor/cakephp/cakephp/tests/Fixture"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
